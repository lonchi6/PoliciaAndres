<Window x:Class="Policia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Policia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF002443">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.ColumnSpan="4" Grid.Column="0" HorizontalAlignment="Center"  VerticalAlignment="Center" Source="/logopolicia.png"  />
        <Button Click="abrirpolicia" Grid.Column="1" Grid.Row="1" Content="Policía" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="150" Height="50" FontSize="25"/>
        <Button Click="abrirciudadano" Grid.Column="2" Grid.Row="1" Content="Ciudadano" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="150" Height="50" FontSize="25"/>
    </Grid>
    
</Window>
